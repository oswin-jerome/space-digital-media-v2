---
import { SOLUTIONS } from "@/data/solutions";
import { Image } from "astro:assets";
---

<section id="corporate" class="w-full py-12 md:py-24 lg:py-32 bg-primary/10">
  <div class="container px-4 md:px-6">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8">Corporate Solutions for Businesses</h2>
    <div class="grid gap-6 lg:grid-cols-3 mt-20">
      {
        SOLUTIONS.map((sol) => {
          return (
            <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
              <div class="p-6 flex flex-col items-center">
                <Image src={sol.image} alt="Branded Bags for Nagercoil businesses" width={100} height={100} class=" object-cover mb-4 aspect-square rounded-full" />
                <h3 class="text-2xl font-bold">{sol.title}</h3>
                <p class="text-gray-500 text-center mt-2">{sol.description}</p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
